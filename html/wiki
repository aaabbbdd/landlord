{
    userId: {
        ready?: boolean,
        // 获得初始化的牌
        initPukes?: {
            pukes: string[],
            amount: number
        },
        // 得到新的牌
        getPukes?: {
            pukes: string[],
            amount: number
        },
        enterAskLandlord?: boolean
        enterGrabLandlord?: boolean
        enterPukes?: boolean
        askLandlord?: boolean
        grabLandlord?: boolean
        pukes?: string[]
    }
}

request
Game.EnterGame 进入游戏
    param
        uid [string]
        name [string]

Game.LeaveGame 离开游戏

Hall.CreateRoom 创建房间
    param
    return
        roomId


Hall.EnterRoom 进入房间
    param
        rid
    return 
        { [uid]: position }

Room.Ready 准备

Room.AskLandlord 叫地主

Room.GrabLandlord 抢地主

Room.Pukes 出牌

